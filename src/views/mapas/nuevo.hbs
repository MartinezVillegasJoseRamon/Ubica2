<div class="row mt-3">

    {{!-- MAPA --}}
    <div class="card col-md-5 mr-auto">
        {{!-- Cargamos el mapa --}}
        <div class="card" id="map">
        </div>

    </div>

    {{!-- IMAGEN --}}
        <div class="card col-md-4 mr-auto">
            {{!-- Cargamos la imagen --}}

            <div class="card-body text-center">
                <img class="img w-50" id="imagenThumbnail" src="/img/noimg.jpg" alt="Imagen subida">
            </div>

            {{!-- <form method="POST" action="/mapas/upload" enctype="multipart/form-data"> --}}
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="inputSubirImagen" accept=".jpeg, .jpg"
                        name="imagen">
                    <label class="custom-file-label" for="inputSubirImagen" id="labelInputSubirImagen">Elegir archivo</label>
                </div>
                <div class="card-footer text-center">
                    <button class="btn btn-success" id="botSubir">Subir imagen
                </div>

            {{!-- </form> --}}
        </div>

    {{!-- CARACTERISTICAS --}}
    <div class="card col-md-3 mr-auto">

        <div class="card-body text-center">
            {{!-- Cargamos los filtros --}}
            <form>
                <div class="form-group">
                    <label for="formGroupInput1">Latitud</label>
                    <input type="text" class="form-control text-center" id="inputLat" placeholder="Latitud" disabled>
                    <label for="formGroupInput2">Longitud</label>
                    <input type="text" class="form-control text-center" id="inputLng" placeholder="Longitud" disabled>
                    <label for="formGroupInput3">Autor</label>
                    <input type="text" class="form-control text-center" id="inputAutor" placeholder="Autor" disabled>

                    <label for="tipo_foto_nueva">Tipo de foto</label>
                    <select id="tipo_foto_nueva" class="custom-select mb-2">
                        <option selected>Tipo de foto</option>
                        <option value="paisaje">Paisaje</option>
                        <option value="macro">Macro</option>
                        <option value="nocturna">Nocturna</option>
                        <option value="LP">Light Painting</option>
                        <option value="ruinas">Ruinas</option>
                        <option value="ciudad">Ciudad</option>
                        <option value="costa">Costa</option>
                        <option value="todas">Todas</option>
                    </select>
                    <label for="inputDireccion">Dirección</label>
                    <input type="text" class="form-control text-center" id="inputDireccion" placeholder="Dirección">
                    <label for="inputAcceso">Acceso</label>
                    <textarea class="form-control text-left" id="inputAcceso" rows="5" placeholder="Acceso"></textarea>
                </div>
            </form>
        </div>
        <div class="card-footer text-center">
            <button class="btn btn-success align-self-end">Insertar nueva ubicación
        </div>
    </div>
</div>


<script src="/js/mapa_nuevo.js"></script>